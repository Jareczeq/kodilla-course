SELECT issueslists.NAME, issues.SUMMARY, issues.DESCRIPTION FROM issues JOIN issueslists ON issues.ISSUESLIST_ID = issueslists.ID;
SELECT issues.SUMMARY, issues.DESCRIPTION, users.FIRSTNAME, users.LASTNAME FROM issues JOIN users ON issues.USER_ID_ASSIGNEDTO = users.ID;
SELECT users.FIRSTNAME, users.LASTNAME, COUNT(issues.USER_ID_ASSIGNEDTO) AS COUNT_OF_TASKS FROM users JOIN issues ON users.ID = issues.USER_ID_ASSIGNEDTO GROUP BY issues.USER_ID_ASSIGNEDTO HAVING COUNT(issues.USER_ID_ASSIGNEDTO) > 0;